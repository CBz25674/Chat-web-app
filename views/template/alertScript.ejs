<% if (errors && errors.length > 0) { %>
    <% errors.forEach(error => { %>
        <script>
            Swal.fire({
                title: "Error",
                text: "<%- error %>",
                icon: "error"
            });
        </script>
    <% }); %>
<% } %>
<% if (messages && messages.length > 0) { %>
    <% messages.forEach(msg => { %>
        <script>
            Swal.fire({
                title: "Success",
                text: "<%- msg %>",
                icon: "success",
                confirmButtonText: "OK",
                confirmButtonColor: "#27ff53"
            });
        </script>
    <% }); %>
<% } %>